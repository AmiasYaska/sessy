# SECRETS=$(kamal secrets fetch --adapter 1password --account YOUR_ACCOUNT --from YOUR_VAULT KAMAL_REGISTRY_PASSWORD DATABASE_URL RAILS_MASTER_KEY HTTP_AUTH_USERNAME HTTP_AUTH_PASSWORD)
# KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract KAMAL_REGISTRY_PASSWORD $SECRETS)
# DATABASE_URL=$(kamal secrets extract DATABASE_URL $SECRETS)
# RAILS_MASTER_KEY=$(kamal secrets extract RAILS_MASTER_KEY $SECRETS)
# HTTP_AUTH_USERNAME=$(kamal secrets extract HTTP_AUTH_USERNAME $SECRETS)
# HTTP_AUTH_PASSWORD=$(kamal secrets extract HTTP_AUTH_PASSWORD $SECRETS)

# Or set directly:
# KAMAL_REGISTRY_PASSWORD=your_registry_password
# DATABASE_URL=postgres://user:pass@host/database
# RAILS_MASTER_KEY=your_master_key
# HTTP_AUTH_USERNAME=admin
# HTTP_AUTH_PASSWORD=your_password
